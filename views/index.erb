<!DOCTYPE HTML>
<html>

  <head>
    <link rel="stylesheet" href="/style.css">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width; initial-scale = 1.0; maximum-scale=1.0; user-scalable=no" />
    <link href='http://fonts.googleapis.com/css?family=Exo+2:600italic,700,800' rel='stylesheet' type='text/css'>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Styles -->
    <%= css :styles %>

    <!-- Vendors -->
    <%= js :vendors %>

    <!-- Vendors -->
    <%= js :helpers %>

    <!-- Backbone -->
    <%= js :backbone %>

    <!-- Marionette-Views -->
    <%= js :views %>

    <!-- Marionette-Routers -->
    <%= js :routers %>

    <!-- Marionette-Application -->
    <%= js :the_move_list %>

  </head>

  <body>
    <!-- background from http://subtlepatterns.com/ SUPER!-->
    <!-- Locals -->
    <div class="title red" style="font-size: medium; display: inherit;">
      <i class="fa fa-cog fa-2x selectable" id="settings" style="float: right;"></i>
      <i class="fa fa-file fa-2x selectable" id="open" style="float: right;"></i>
      <span class="main-title">The Command List</span><br/>
      <span style="font-size: 18px">by Jesse and Ethan Jurman (this set is a work in progress)</span>
      <div align="center" id="game-selector"></div>
      <div align="center" id="character-selector"></div>
    </div>
    <div class="red" align="center">
        <i class="fa fa-chevron-up toggle-title selectable" style="padding: 0px 45%;"></i>
        <i class="fa fa-chevron-down toggle-title selectable" style="display:none; padding: 0px 45%;"></i>
    </div>

    <div class="local-data"
        game-data-id="<%= game %>"
        character-data-id="<%= character %>">
    </div>
    <div align="center" id="characters"></div>

    <!-- scripts for page -->
    <!-- this one is used for proper table resizing -->
    <script type="text/javascript" charset="utf-8">
      $(window).trigger('resize');
      $(".toggle-title").click(function(){
        $(".title").slideToggle(400, function(){
          $(".toggle-title").toggle();
        });
      });
    </script>
  </body>
</html>
